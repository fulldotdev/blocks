---
import { Button, Header } from 'fulldev-ui'
import Layout from './Layout.astro'

const bookshops = await Astro.glob('../components/blocks/**/*.yml')
---

<Layout>
  <Header structure="wrap">
    {
      bookshops.map((block) => (
        <>
          <Button
            variant="link"
            href={`/blocks/${block.spec.label}/`}
            text={block.spec.label}
          />
        </>
      ))
    }
  </Header>
  <slot />
</Layout>
