---
import type { ComponentProps } from 'astro/types'
import { Grid, Prose } from 'fulldev-ui'
import Blocks from '../components/Blocks.astro'
import Intro from '../components/blocks/Intro.astro'
import Layout from './Layout.astro'
import NavLayout from './NavLayout.astro'

interface Props extends ComponentProps<typeof Layout> {
  intro?: any
  blocks?: any
}

const { intro, product, blocks, ...rest } = Astro.props
---

<NavLayout {...rest}>
  <Intro {...intro} />
  <Grid>
    <!-- products go here -->
  </Grid>
  <Prose>
    <slot name="content" />
  </Prose>
  <Blocks {...blocks} />
  <slot />
</NavLayout>

<style is:global lang="scss"></style>
