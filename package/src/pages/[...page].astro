---
import { getCollection, getEntries, getEntry } from 'astro:content'
import { PageLayout } from 'fulldev-blocks'

export async function getStaticPaths() {
  const pages = await getCollection('pages')
  return pages.map((page) => ({
    params: {
      page: page.slug === 'index' ? undefined : page.slug,
    },
    props: page,
  }))
}

const { data, render } = Astro.props
const { Content } = await render()

const footer = (await getEntry('blocks', 'Footer'))?.data
const header = (await getEntry('blocks', 'Header'))?.data
const cta = (await getEntry('blocks', 'Cta'))?.data

// Temp fix due to bug when not always present
data.pages = await getEntries(data.pages.filter(Boolean))
---

<PageLayout
  {header}
  {footer}
  {cta}
  {...data}
>
  <Content slot="content" />
</PageLayout>
