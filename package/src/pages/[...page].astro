---
import { getCollection, getEntry } from 'astro:content'
import { PageLayout } from 'fulldev-blocks'

export async function getStaticPaths() {
  const pages = await getCollection('pages')
  return pages.map((page: any) => ({
    params: {
      page: page.slug === 'index' ? undefined : page.slug,
    },
    props: page,
  }))
}

const { data, render } = Astro.props
const { Content } = await render()
const footer = (await getEntry('globals', 'footer')).data
const header = (await getEntry('globals', 'header')).data
const cta = (await getEntry('globals', 'cta')).data
---

<PageLayout
  {header}
  {footer}
  {cta}
  {...data}
>
  <Content slot="content" />
</PageLayout>
