---
import type { ComponentProps } from 'astro/types'
import {
  Button,
  Heading,
  Icon,
  Link,
  Row,
  Section,
  Tagline,
  Text,
} from 'fulldev-ui'

interface Props extends ComponentProps<typeof Section> {
  tagline?: string
  heading?: string
  text?: string
  links?: ComponentProps<typeof Link>[]
  buttons?: ComponentProps<typeof Button>[]
}

const { heading, text, buttons, links, tagline, ...rest } = Astro.props
---

<Section
  structure="column"
  align="center"
  {...rest}
>
  <Tagline text={tagline} />
  <Heading html={heading} />
  <Text html={text} />
  <Row>
    <Row>
      {buttons?.map((button, i) => <Button {...button} />)}
      {links?.map((link, i) => <Link {...link} />)}
    </Row>
  </Row></Section
>
