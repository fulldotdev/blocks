---
import type { ComponentProps } from 'astro/types'
import {
  Button,
  Header as FullHeader,
  Heading,
  Link,
  Logo,
  Row,
} from 'fulldev-ui'

interface Props extends ComponentProps<typeof FullHeader> {
  logo?: string
  heading?: string
  href?: string
  links?: ComponentProps<typeof Link>[]
  buttons?: ComponentProps<typeof Button>[]
}

const { logo, heading, links, buttons, href, ...rest } = Astro.props
---

<FullHeader structure="spread">
  <Row
    style={{ textDecoration: 'none' }}
    as="a"
    href="/"
  >
    <Logo src={logo} />
    <Heading
      as="p"
      level={3}
      text={heading}
    />
  </Row>
  <Row>
    {links?.map((link, i) => <Link {...link} />)}
    {buttons?.map((button, i) => <Button {...button} />)}
  </Row>
</FullHeader>
