---
import type { HTMLTag } from 'astro/types'
import {
  Column,
  Footer as FullFooter,
  Heading,
  Link,
  Logo,
  Split,
  Text,
} from 'fulldev-ui'
import type { Block } from '../../schemas/block'

type Props<As extends HTMLTag = 'footer'> = Block<As>

const { logo, heading, categories, href, text, ...rest } = Astro.props
---

<FullFooter
  structure="split"
  size="sm"
>
  <Column>
    <Column
      style={{ textDecoration: 'none' }}
      as="a"
      href="/"
    >
      <Logo src={logo} />
      <Heading
        as="p"
        level={2}
        text={heading}
      />
    </Column>
    <Text text={text} />
  </Column>
  <Split align="start">
    {
      categories?.map((category) => (
        <Column>
          <Heading
            text={category.category}
            level={3}
          />
          {category.links.map((link) => (
            <Link
              href={link.href}
              text={link.text}
            />
          ))}
        </Column>
      ))
    }
  </Split>
</FullFooter>
