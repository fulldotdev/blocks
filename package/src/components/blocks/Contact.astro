---
import type { ComponentProps } from 'astro/types'
import {
  Button,
  Column,
  Form,
  Heading,
  Image,
  Input,
  Row,
  Section,
  Tagline,
  Text,
  Textarea,
} from 'fulldev-ui'

interface Props extends ComponentProps<typeof Section> {
  heading?: string
  text?: string
  tagline?: string
  googleMaps?: string
  buttons?: ComponentProps<typeof Button>[]
  channels?: {
    icon?: string
    title?: string
    text?: string
    href?: string
  }[]
  socials?: {
    icon: string
    href: string
  }[]
}

const {
  heading,
  text,
  tagline,
  googleMaps,
  buttons,
  channels,
  socials,
  ...rest
} = Astro.props
---

<Section
  {...rest}
  structure="split"
>
  <Column>
    <Tagline html={tagline} />
    <Heading
      level={1}
      html={heading}
    />
    <Text html={text} />
    <Row>
      {buttons?.map((button) => <Button {...button} />)}
    </Row>

    <Column>
      {
        channels?.map((channel) => (
          <Row>
            <Button
              href={channel.href}
              icon={channel.icon}
            />
            <Column compact>
              <Text
                text={channel.title}
                contrast
              />
              <Text text={channel.text} />
            </Column>
          </Row>
        ))
      }
    </Column>

    <Row>
      {
        socials?.map((social) => (
          <Button
            href={social.href}
            icon={social.icon}
          />
        ))
      }
    </Row>

    <Form>
      <Input
        label="Name"
        id="Name"
        name="Name"
        type="text"
        required
      />
      <Input
        label="Email"
        id="Email"
        name="Email"
        type="email"
        required
      />
      <Input
        label="Phone"
        id="Phone"
        name="Phone"
        type="tel"
        required
      />
      <Textarea
        label="Message"
        id="Message"
        name="Message"
      />
      <Button text="Send message" />
    </Form>
  </Column>

  <!-- <iframe
    src={googleMaps}
    width="100%"
    height="450"
    style="border:0; margin-top: var(--space-6);"
    allowfullscreen="false"
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"
  ></iframe> -->
  <Image src={'/placeholder.webp'} />
</Section>
