---
import type { HTMLTag } from 'astro/types'
import { getEntries } from 'astro:content'
import { Card, Heading, Image, Row, Section, Text } from 'fulldev-ui'
import type { Block } from '../../schemas/block'

type Props<As extends HTMLTag = 'section'> = Block<As>

const { heading, text, pages, ...rest } = Astro.props

const entries = await getEntries(pages)
---

<Section {...rest}>
  <Heading html={heading} />
  <Text html={text} />
  <Row align="center">
    {
      entries?.map(({ slug, data: { image, heading, text, author } }) => (
        <Card
          href={slug}
          variant="outline"
        >
          <Image
            src={image}
            position="inset"
          />
          <Heading
            html={heading}
            level={3}
          />
          <Text html={text} />

          {/* <Row>
            <Avatar
              src={author?.image}
              width={60}
              height={60}
            />
            <Column>
              <Heading
                level={4}
                html={author?.name}
              />
              <Text html={author?.tagline} />
            </Column>
          </Row> */}
        </Card>
      ))
    }
  </Row>
</Section>
