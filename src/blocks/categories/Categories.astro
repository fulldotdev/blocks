---
import type { HTMLTag } from 'astro/types'
import type { CollectionEntry } from 'astro:content'
import {
  Box,
  Button,
  Card,
  Column,
  Heading,
  Image,
  Section,
  Spread,
  Text,
  Wrap,
} from 'fulldev-ui'
import type { Block } from '../../schemas/block'

type Props<As extends HTMLTag = 'section'> = Omit<Block<As>, 'frame'> & {
  categories?: CollectionEntry<'categories'>[]
  frame?: 'fill' | 'panel'
}

const {
  structure = 'grid',
  position = 'background',
  variant = 'surface',
  frame = 'panel',
  ratio = 'square',
  theme = 'dark',
  mask,
  heading,
  text,
  categories,
  buttons,
  ...rest
} = Astro.props
---

<Section
  class:list={'categories'}
  {...rest}
>
  <Spread>
    <Column>
      <Heading html={heading} />
      <Text html={text} />
    </Column>
    <Wrap>
      {buttons?.map((button, i) => <Button {...button} />)}
    </Wrap>
  </Spread>
  <Box
    {structure}
    position={structure === 'carousel' ? 'inset' : undefined}
  >
    {
      categories?.map(({ slug, data: { title, description, image } }) => (
        <Card
          href={`/categorieen/${slug}/`}
          {frame}
          {variant}
          ratio={structure === 'bento' ? undefined : ratio}
          {theme}
        >
          <Image
            src={image}
            {position}
            {mask}
          />
          <Heading
            style={{ marginTop: 'auto' }}
            html={title}
            level={3}
          />
          <Text html={description} />
        </Card>
      ))
    }
  </Box>
</Section>
