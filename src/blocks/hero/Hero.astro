---
import type { HTMLTag } from 'astro/types'
import {
  Badge,
  Box,
  Button,
  Heading,
  Image,
  Section,
  Tagline,
  Text,
  Wrap,
} from 'fulldev-ui'
import type { Block } from '../../schemas/block'

type Props<As extends HTMLTag = 'section'> = Block<As>

const {
  structure = 'column',
  size = 'xl',
  level = 1,
  align,
  position,
  heading,
  badge,
  tagline,
  text,
  buttons,
  image,
  ...rest
} = Astro.props
---

<Section
  structure={structure === 'split' ? 'split' : 'column'}
  {size}
  {align}
  {...rest}
>
  <Box
    structure={structure === 'spread' ? 'spread' : 'column'}
    align={structure === 'split' ? 'start' : align}
  >
    <Badge html={badge} />
    <Tagline
      color="brand"
      html={tagline}
    />
    <Heading
      {level}
      html={heading}
    />
    <Text html={text} />
    <Wrap>
      {buttons?.map((button) => <Button {...button} />)}
    </Wrap>
  </Box>
  <Image
    {position}
    src={image}
  />
</Section>
