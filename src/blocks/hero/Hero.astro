---
import {
  Badge,
  Box,
  Button,
  Column,
  Heading,
  Image,
  Label,
  Rating,
  Section,
  Text,
  Wrap,
} from 'fulldev-ui'
import ReviewCard from '../reviews/ReviewCard.astro'

const {
  structure = 'column',
  size = 'xl',
  level = 1,
  align,
  position,
  label,
  heading,
  badge,
  title,
  text,
  html,
  description,
  buttons,
  review,
  image,
  rating,
  button,
  ...rest
} = Astro.props
---

<Section
  class:list={'hero'}
  structure={structure === 'split' ? 'split' : 'column'}
  {size}
  {align}
  {...rest}
>
  <Box
    structure={structure === 'spread' ? 'spread' : 'column'}
    align={structure === 'split' ? 'start' : align}
  >
    <Column align={structure === 'column' ? align : 'start'}>
      <Rating value={rating} />
      <ReviewCard
        frame="none"
        {...review}
      />
      <Badge html={badge} />
      <Label
        color="brand"
        html={label}
      />
      <Heading
        color="base"
        {level}
        html={heading || title}
      />
      <Text
        color="base"
        contrast={position === 'background' && true}
        html={html || text || description}
      />
    </Column>
    <Wrap>
      {[button, ...(buttons || [])]?.map((button) => <Button {...button} />)}
    </Wrap>
  </Box>
  <Image
    {position}
    src={image}
  />
</Section>

<slot name="script" />
<slot name="style" />
