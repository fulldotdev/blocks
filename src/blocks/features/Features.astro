---
import type { HTMLTag } from 'astro/types'
import {
  Button,
  Card,
  Column,
  Heading,
  Icon,
  Row,
  Section,
  Split,
  Spread,
  Tagline,
  Text,
} from 'fulldev-ui'
import type { Block } from '../../schemas/block'

type Props<As extends HTMLTag = 'section'> = Block<As>

const { tagline, heading, text, buttons, image, cards, ...rest } = Astro.props
---

<Section
  class:list={'features'}
  {...rest}
>
  <Spread>
    <Column>
      <Tagline html={tagline} />
      <Heading html={heading} />
      <Text html={text} />
    </Column>
    <Row>
      {buttons?.map((button) => <Button {...button} />)}
    </Row>
  </Spread>
  <Split>
    {
      cards?.map(({ icon, heading, text }) => (
        <Card frame="none">
          <Icon
            color="brand"
            name={icon}
          />
          <Heading
            level={3}
            html={heading}
          />
          <Text html={text} />
        </Card>
      ))
    }
  </Split>
</Section>
