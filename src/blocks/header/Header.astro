---
import type { HTMLTag } from 'astro/types'
import {
  Button,
  Header as FullHeader,
  Heading,
  Link,
  Logo,
  Row,
} from 'fulldev-ui'
import type { Block } from '../../schemas/block'

type Props<As extends HTMLTag = 'header'> = Block<As>

const { logo, heading, links, buttons, href, ...rest } = Astro.props
---

<FullHeader
  structure="spread"
  {...rest}
>
  <Row
    style={{ textDecoration: 'none' }}
    as="a"
    href="/"
  >
    <Logo src={logo} />
    <Heading
      as="p"
      level={3}
      text={heading}
    />
  </Row>
  <Row>
    {links?.map((link, i) => <Link {...link} />)}
    {buttons?.map((button, i) => <Button {...button} />)}
  </Row>
</FullHeader>
