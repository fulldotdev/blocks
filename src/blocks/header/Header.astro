---
import type { HTMLTag } from 'astro/types'
import {
  Button,
  Column,
  Header as FullHeader,
  Heading,
  Link,
  Logo,
  Row,
} from 'fulldev-ui'
import type { Block } from '../../schemas/block'

type Props<As extends HTMLTag = 'header'> = Omit<Block<As>, 'structure'> & {
  variant?: 'ghost' | 'base' | 'subtle' | 'soft' | 'surface' | 'outline'
  structure?: 'spread' | 'row' | 'column'
  align?: 'start' | 'center' | 'end'
  logo?: string
  heading?: string
  links?: any[]
  buttons?: any[]
}

const {
  variant = 'ghost',
  align = 'center',
  structure = 'spread',
  logo,
  heading,
  links,
  buttons,
  href,
  ...rest
} = Astro.props
---

<FullHeader
  class:list={'header'}
  {align}
  {structure}
  {variant}
  {...rest}
>
  <Row
    style={{ textDecoration: 'none', height: '100%' }}
    as="a"
    href="/"
  >
    <Logo src={logo} />
    <Heading
      as="p"
      level={3}
      text={heading}
    />
  </Row>
  <Row>
    {
      links?.map((link, i) => (
        <Link
          class={'header-link'}
          {...link}
        />
      ))
    }
    {buttons?.map((button, i) => <Button {...button} />)}
    <Button
      icon="menu-2"
      class={'hamburger'}
      variant="outline"
      as="label"
      contrast
      for="hamburger-toggle"
    />
    <input
      id="hamburger-toggle"
      class="hamburger-toggle"
      name="hamburger-toggle"
      type="checkbox"
    />
    <Column
      align="center"
      class="dropdown"
    >
      {links?.map((link, i) => <Link {...link} />)}
    </Column>
  </Row>
</FullHeader>

<style>
  .header {
    /* .row .link {
      display: none;
    } */

    .header-link {
      display: none;
      font-size: var(--text-1);

      @media (min-width: 768px) {
        display: flex;
      }
    }

    .hamburger {
      @media (min-width: 768px) {
        display: none;
      }
    }

    .dropdown {
      display: none;
    }

    .hamburger-toggle {
      display: none;
    }

    .hamburger-toggle:checked ~ .dropdown {
      display: flex;
    }

    .dropdown {
      position: absolute;
      top: 100%;
      right: 0;
      left: 0;
      gap: var(--space-4);
      box-shadow: 0 100px 100px rgba(0, 0, 0, 0.2);
      border-bottom: 1px solid var(--color-6);
      background: var(--color-1);
      padding-top: var(--space-6);
      padding-bottom: var(--space-6);

      @media (min-width: 768px) {
        display: none !important;
      }
    }
  }
</style>
