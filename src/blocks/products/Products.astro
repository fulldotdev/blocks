---
import type { HTMLTag } from 'astro/types'
import type { CollectionEntry } from 'astro:content'
import {
  Box,
  Button,
  Card,
  Column,
  Heading,
  Image,
  Section,
  Spread,
  Text,
  Wrap,
} from 'fulldev-ui'
import type { Block } from '../../schemas/block'
import Prices from '../prices/Prices.astro'

type Props<As extends HTMLTag = 'section'> = Block<As> & {
  products: CollectionEntry<'products'>[]
}

const {
  structure = 'carousel',
  size = 'sm',
  heading,
  text,
  buttons,
  products,
  ...rest
} = Astro.props
---

<Section
  class:list={'products'}
  {...rest}
>
  <Spread>
    <Column>
      <Heading html={heading} />
      <Text html={text} />
    </Column>
    <Wrap>
      {buttons?.map((button, i) => <Button {...button} />)}
    </Wrap>
  </Spread>
  <Box
    {structure}
    position={structure === 'carousel' ? 'inset' : undefined}
  >
    {
      products?.map(({ slug, data: { title, image, images, price } }) => (
        <Card
          href={`/producten/${slug}/`}
          frame="none"
        >
          <Image src={image || images?.[0]} />
          <Spread>
            <Heading
              level={4}
              as="h3"
              html={title}
            />
            <Prices value={price} />
          </Spread>
        </Card>
      ))
    }
  </Box>
</Section>
