---
import type { CollectionEntry } from 'astro:content'
import { Prose, Section } from 'fulldev-ui'
import Block from '../components/Block.astro'
import Blocks from '../components/Blocks.astro'
import Layout from './Layout.astro'

type Props = CollectionEntry<'pages'>

const { data, render } = Astro.props
const { section, sections, block, blocks, children, references } = data
const { Content } = await render()
---

<Layout {...Astro.props}>
  <Block
    _bookshop_name="Hero"
    {...data}
  />
  <Block
    _bookshop_name="Categories"
    source="children"
    structure="grid"
    {...children}
  />
  <Block
    _bookshop_name="Products"
    heading={data.title && references
      ? `Alle ${data.title.toLowerCase()}`
      : undefined}
    source="references"
    structure="grid"
    {...references}
  />
  <Section
    size="lg"
    style={{ '--screen': '768px' }}
  >
    <Prose id="prose">
      <Content />
    </Prose>
  </Section>
  <Blocks {...sections} />
  <Blocks {...blocks} />
  <slot />
</Layout>
